<h1 class="main-title">Upload a New Photo</h1>

<%= form_with(model: @photo, local: true) do |form| %>
  <div>
    <%= form.label :title, "Photo Title" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :image, "Upload Photo" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "Create Photo" %>
  </div>
<% end %>

<%= link_to "Back to Gallery", photos_path %>